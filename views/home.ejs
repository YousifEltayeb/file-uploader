<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
  </head>
  <body>
    <% if(currentUser) { %>
    <a href="/auth/logout">Click here to logout</a>
    <br />
    <br />
    <%- include("errors.ejs") %>
    <form action="/folders/create" method="POST">
      <label for="title">Folder title:</label>
      <input type="text" name="title" id="title" />
      <button type="submit">Create Folder</button>
    </form>
    <br />
    <br />
    <% if(locals.folders) { %>
    <h1>My Folders</h1>
    <br />
    <% folders.forEach(function(folder) { %>
    <a href="/folders/<%= folder.id %>"> <%= folder.title %> </a>
    <br />
    <br />
    <form action="/folders/update/<%= folder.id %>" method="GET">
      <button type="submit">Change title</button>
    </form>
    <br />
    <% }) %> <% } %> <% } %>
  </body>
</html>
